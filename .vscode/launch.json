  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug PVM",
      "type": "node",
      "request": "launch",
      "runtimeArgs": ["-r", "ts-node/register"],
      "program": "${workspaceFolder}/pvm/ts/src/index.ts",
      "preLaunchTask": "",
      "cwd": "${workspaceFolder}/pvm/ts",
      "sourceMaps": true,
      "console": "integratedTerminal",
      "outFiles": ["${workspaceFolder}/pvm/ts/dist/**/*.js"],
      "skipFiles": ["<node_internals>/**"]
    },
  ]
}
